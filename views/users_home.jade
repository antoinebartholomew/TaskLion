//extent layout.jade ============================================================================== 
extends layout
//importing everything below into block content1 on layout.jade ===================================
block content1
    .container
      .row
        .offset-md-7.col-md-2
          a.btn.btn-primary(href='/tasks') View All Tasks
        .col-md-2
          a.btn.btn-primary(href='/user/settings/:user') Account Settings
        .col-md-1
          button#logoutSubmit.btn.btn-primary(type='submit') Log Out
    .container
      .row
        h3#userName.rowBackground
        .offset-md-12
      .row
        h3.rowBackground Pending Task
        #userPendingTask.offset-md-12
      .row
        h3.rowBackground Completed Task
        #userCompletedTask.offset-md-12